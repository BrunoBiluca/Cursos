<% if @room.errors.any? %>
  <div id="error_explanation">
    Há erros no formulário, por favor verifique.
  </div>
<% end %>
<%= form_for(@room) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
    <% error_tag @room, :title %>
  </div>
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
    <% error_tag @room, :location %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
    <% error_tag @room, :description %>
  </div>
  <div class="field">
    <%= f.label :text %>
    <%= f.text_field :text %>
    <% error_tag @room, :text %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
